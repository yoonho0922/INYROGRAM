<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/login_backgroung"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                app:srcCompat="@drawable/inyrogram_title1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antipastopropextraboldtrial"
                android:hint = "Email"
                android:id = "@+id/idlogin"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/passwordlogin"
                android:fontFamily="@font/antipastopropextraboldtrial"
                android:inputType="textPassword"
                android:hint = "Password"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/login_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:textColor="#9C111111"
                    android:fontFamily="@font/antipastopropextraboldtrial"
                    android:text="Log In"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_corner"
                    android:textColor="#9C111111"
                    android:text="Log Out"
                    android:fontFamily="@font/antipastopropextraboldtrial"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/resister_button"
                android:layout_width="fill_parent"
                android:layout_height="78dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner"
                android:fontFamily="@font/antipastopropextraboldtrial"
                android:textColor="#9C111111"

                android:text="No Account? Join Now"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>